<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if flash[:alert] %>
          <div class="form-error">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email" value="<%= params[:email] %>" placeholder="メールアドレス">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= params[:password] %>" placeholder="パスワード">
          <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>
