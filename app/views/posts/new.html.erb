<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_tag("/posts/create", class: "post-form") do %>
      <div class="form">
        <div class="p-4">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div class="mtg-agenda">
            <p>ミーティング議題</p>
            <label class="br2-label">(1) 仕事で感じたこと</label>
            <textarea class="work_content auto-save" name="work_content"><%= @post.work_content %></textarea>
            <label class="br2-label">(2) (1)の深掘り（解析・分析）</label>
            <textarea class="content auto-save" name="content"><%= @post.content %></textarea>
            <label class="br2-label">(3) 自己学習について</label>
            <textarea class="study_content auto-save" name="study_content"><%= @post.study_content %></textarea>
            <label class="br2-label">(4) 特記事項</label>
            <textarea class="notices_content auto-save" name="notices_content" ><%= @post.notices_content %></textarea>
            <input style="float: initial !important; justify-content: end; margin-left: 86%;" type="submit" value="投稿">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<input class="hidden url" value="/posts/create">
<%= javascript_include_tag "posts.js" %>
<%= javascript_include_tag "urlchange.js" %>

